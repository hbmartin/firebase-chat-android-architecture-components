<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="me.haroldmartin.chat.api.InboxItem"/>
        <variable name="conversation" type="me.haroldmartin.chat.api.InboxItem"/>
    </data>
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardUseCompatPadding="true">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@{conversation.getDialogName()}"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    tools:text="repository name" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/stars"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginLeft="@dimen/default_margin"/>
            <TextView
                    android:text="@{conversation.getText()}"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/default_margin"
                    tools:layout_editor_absoluteX="@dimen/default_margin"
                    tools:text="this is some description more description more description"
                    android:layout_width="0dp" android:layout_marginLeft="@dimen/default_margin"/>
            <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stars" tools:text="5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/default_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/default_margin"
                    android:drawableStart="@android:drawable/btn_star"
                    android:drawableLeft="@android:drawable/btn_star"
                    android:layout_marginLeft="@dimen/default_margin"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
